<div class="container parts forms-list">
  <div class="container">
    <form action="/lists" method="POST">
      <div class="form-group">
        <textarea class="form-control list-input" rows="3" placeholder="Enter your list here" name="todolist"></textarea>
      </div>
      <div class="bottom">
        <div class="bottom-checkedbox">
          <div class="checkbox">
            <label>
              <input type="radio" name="status" checked value="pending">Pending</label>
          </div>
          <div class="checkbox">
            <label>
              <input type="radio" name="status" value="urgent">Urgent</label>
          </div>
        </div>
        <div class="bottom-btn">
          <button type="submit" class="btn btn-default btn-primary btn-xs pull-right">Submit</button>
        </div>
      </div>
    </form>
    
  </div>